@model Katana.Models.Transaction

@{
    ViewData["Title"] = "Details";
}

<h1>Transaction @Model.Id</h1>
<hr/>
<div>
    <dl class="row">
        <dt class="col-sm-2" >@Html.DisplayNameFor(model => model.Date)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>
        <dt class="col-sm-2" >@Html.DisplayNameFor(model => model.Note)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Note)</dd>
        <dt class="col-sm-2" >@Html.DisplayNameFor(model => model.Entries)</dt>
        <dd class="col-sm-10">
            <div>
                <table class="table-sm">
                <tbody>
                   @foreach (var entry in Model.Entries)
                    {
                        <tr>
                            <td><katana account="entry.Account"></katana></td>
                            <td><katana amount="entry.Amount"></katana></td>
                        </tr>
                    }
                </tbody>
                </table>
            </div>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
